<p id="notice"><%= notice %></p>


<% if can? :create, @post %>
	<h2><%= link_to 'Create a New Post', new_post_path( :jid => @journal.id )%></h2>
<% end %>

<% if @posts.nil? || @posts.empty? %>
	<p> There is nothing here yet </p>
<% else %>
  <div class = "span6">
		<% @posts.each do |p| %>		
			<% if p.nil? %>
			<% else %>
				<h5>  <%= p.name %>  </h5>		
				<p>  <%= p.content %>  </p>	
			<% end %>
		<% end %>
	</div>		
<% end %>

