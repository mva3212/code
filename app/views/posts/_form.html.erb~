<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :content %>
    <%= f.input :journal_id , :as => :hidden %>
    <%= f.input :user_id, :as => :hidden  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
