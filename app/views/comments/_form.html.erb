<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :body %>
    <%= f.input :post_id , :as => :hidden %>
    <%= f.input :user_id, :as => :hidden  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
