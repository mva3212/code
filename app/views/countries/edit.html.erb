countries<h1>Editing Country:  <%= @country.code %></h1>

<form  method="post"  action="/countries/update/">

	<input type="hidden" name="targetId" value="<%= @country.id %>"/>
	<div class="control-groups"> 
		<label class="control-label">Name</label>
          
		<input type="text" name="name" value="<%= @country.name %>"/>
	</div>   
    
<div class="control-groups"> 
		<label class="control-label">Code</label>
          
		<input type="text" name="code" value="<%= @country.code %>"/>
	</div>   

<div class="row-fluid">	
<input type=submit class="btn btn-primary" value="Save" /> <!--REFACTOR: link -->
                
	<a href="/countries/index" class="btn">Cancel</a>
</form>

